{
  "name": "navi",
  "version": "0.1.0",
  "private": true,
  "description": "Spotlight-style LLM desktop app",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:electron": "pnpm --filter @navi/electron dev",
    "dev:api": "pnpm --filter @navi/api dev",
    "dev:website": "pnpm --filter @navi/website dev",
    "build:electron": "pnpm --filter @navi/electron build",
    "build:api": "pnpm --filter @navi/api build",
    "build:website": "pnpm --filter @navi/website build"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}